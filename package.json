{
    "name": "claude-context",
    "version": "0.2.0",
    "description": "A powerful code indexing tool with multi-platform support",
    "private": true,
    "scripts": {
        "build": "pnpm -r --filter='!./examples/*' build && pnpm -r --filter='./examples/*' build",
        "build:core": "pnpm --filter @dannyboy2042/claude-context-core build",
        "build:mcp": "pnpm --filter @dannyboy2042/claude-context-mcp build",
        "dev": "pnpm -r dev",
        "dev:core": "pnpm --filter @dannyboy2042/claude-context-core dev",
        "dev:mcp": "pnpm --filter @dannyboy2042/claude-context-mcp dev",
        "clean": "pnpm -r clean",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r run lint:fix",
        "typecheck": "pnpm -r run typecheck",
        "test:core": "pnpm --filter @dannyboy2042/claude-context-core test",
        "release:core": "pnpm --filter @dannyboy2042/claude-context-core... run build && pnpm --filter @dannyboy2042/claude-context-core publish --access public --no-git-checks",
        "release:mcp": "pnpm --filter @dannyboy2042/claude-context-mcp... run build && pnpm --filter @dannyboy2042/claude-context-mcp publish --access public --no-git-checks"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^20.19.30",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "eslint": "^9.39.2",
        "globals": "^17.0.0",
        "https-browserify": "^1.0.0",
        "os-browserify": "^0.3.0",
        "stream-http": "^3.2.0",
        "tree-sitter-cli": "^0.26.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "url": "^0.11.4",
        "vm-browserify": "^1.1.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dannyboy2042/claude-context.git"
    },
    "license": "MIT",
    "author": "Claude Context Community",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@derekstride/tree-sitter-sql",
            "@tree-sitter-grammars/tree-sitter-hcl",
            "@tree-sitter-grammars/tree-sitter-yaml",
            "tree-sitter",
            "tree-sitter-c",
            "tree-sitter-c-sharp",
            "tree-sitter-cpp",
            "tree-sitter-dart",
            "tree-sitter-go",
            "tree-sitter-java",
            "tree-sitter-javascript",
            "tree-sitter-python",
            "tree-sitter-rust",
            "tree-sitter-typescript"
        ],
        "overrides": {
            "tree-sitter@>0.21.1": "0.21.1"
        }
    }
}