{
    "name": "@dannyboy2042/claude-context-mcp",
    "version": "0.2.0",
    "description": "Model Context Protocol integration for Claude Context",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/index.js",
    "scripts": {
        "build": "yarn clean && tsc --build --force",
        "dev": "tsx --watch src/index.ts",
        "clean": "rm -rf dist",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "start": "tsx src/index.ts",
        "start:with-env": "OPENAI_API_KEY=${OPENAI_API_KEY:your-api-key-here} MILVUS_ADDRESS=${MILVUS_ADDRESS:localhost:19530} tsx src/index.ts",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@dannyboy2042/claude-context-core": "workspace:*",
        "@modelcontextprotocol/sdk": "^1.25.2",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@types/node": "^22.19.7",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/dannyboy2042/claude-context.git",
        "directory": "packages/mcp"
    },
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    }
}